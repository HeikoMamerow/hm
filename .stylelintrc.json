{
  "extends": "stylelint-config-wordpress",
  "rules": {
    "comment-empty-line-before": [
      "always",
      {
        "ignore": [
          "stylelint-commands",
          "after-comment"
        ]
      }
    ],
    "declaration-colon-space-after": "always",
    "rule-empty-line-before": [
      "always",
      {
        "except": [
          "first-nested"
        ],
        "ignore": [
          "after-comment"
        ]
      }
    ],
    "selector-class-pattern": [
      "^([a-z][a-z0-9]*)([-_]*[a-z0-9]+)*$",
      {
        "message": "BEM is okay."
      }
    ]
  }
}